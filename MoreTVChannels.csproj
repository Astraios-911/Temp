<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>MoreTVChannels</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<GameModsPath>C:/Program Files (x86)/Steam/steamapps/common/Stardew Valley/Mods (dev)</GameModsPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Lib.Harmony" Version="2.3.6" />
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.4.0" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
	  <Exec Command="powershell -Command &quot;Expand-Archive -Path '$(OutputPath)MoreTVChannels 1.0.0.zip' -DestinationPath '$(GameModsPath)' -Force&quot;" />
  </Target>

</Project>
